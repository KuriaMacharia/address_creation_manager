<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_officer_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Officer Name"
        android:textAlignment="center"
        android:textColor="@color/tabsBar"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_position_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Position"
        android:textAlignment="center"
        android:textColor="@color/tabsBar"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_officer_name_txt"
        app:layout_constraintStart_toStartOf="@+id/txt_officer_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/txt_officer_name_txt" />

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:background="@color/workGreen"
        app:layout_constraintEnd_toEndOf="@+id/txt_position_txt"
        app:layout_constraintStart_toStartOf="@+id/txt_position_txt"
        app:layout_constraintTop_toBottomOf="@+id/txt_position_txt" />
</android.support.constraint.ConstraintLayout>