<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_distance_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0.0000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_latitude_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0.0000"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txt_distance_item"
        app:layout_constraintStart_toStartOf="@+id/txt_distance_item"
        app:layout_constraintTop_toBottomOf="@+id/txt_distance_item" />

    <TextView
        android:id="@+id/txt_longitude_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0.00"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txt_latitude_item"
        app:layout_constraintStart_toStartOf="@+id/txt_latitude_item"
        app:layout_constraintTop_toBottomOf="@+id/txt_latitude_item" />
</android.support.constraint.ConstraintLayout>